	;;

###### NeXT (x86, m68k, sparc, hppa)

    *x86-next)
	TARGET_AS="gcc -c"
	TARGET_CC="gcc"
	TARGET_CCFLAGS="$OPTS_GCC_X86 -D_NeXT_ -DPIPELINE_COUNT=2 -DBIT_32"
	TARGET_ADDSRCS="$RC5X86_SRCS $DESX86_SRCS"
	TARGET_ADDASMS="des/bdeslow.S des/bbdeslow.S platforms/x86ident.S"
	;;

    *m68k-next-gcc)
