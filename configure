	TARGET_ADDSRCS="$RC5X86_SRCS $DESX86_SRCS"
	TARGET_ADDASMS="des/bdeslow.S des/bbdeslow.S platforms/x86ident.S"
	TARGET_LIBS="-lc_r"
	;;

    *x86-netbsd)
